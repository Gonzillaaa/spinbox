# Next.js Environment Configuration
# Copy this file to .env.local and update with your actual values
# NEVER commit .env.local files to version control

# ===== API CONFIGURATION =====
# Backend API URL (public - exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Internal API URL (server-side only)
BACKEND_URL=http://localhost:8000

# API Version
NEXT_PUBLIC_API_VERSION=v1

# ===== APPLICATION SETTINGS =====
# Application Configuration
NEXT_PUBLIC_APP_NAME="Next.js Application"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV=development

# ===== SECURITY =====
# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here-change-this-in-production

# Session Configuration
SESSION_TIMEOUT=1800  # 30 minutes in seconds

# ===== EXTERNAL SERVICES =====
# Authentication Providers (OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===== ANALYTICS =====
# Google Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# ===== MONITORING =====
# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ===== CONTENT DELIVERY =====
# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,example.com
NEXT_PUBLIC_IMAGE_SIZES=640,750,828,1080,1200,1920,2048,3840

# ===== FEATURE FLAGS =====
# Feature toggles
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=false

# ===== DEVELOPMENT SETTINGS =====
# Development-specific settings
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG=true

# Hot reload configuration
NEXT_PUBLIC_FAST_REFRESH=true

# ===== PRODUCTION OVERRIDES =====
# Uncomment and configure for production
# NEXT_PUBLIC_APP_ENV=production
# NEXT_PUBLIC_DEV_MODE=false
# NEXT_PUBLIC_DEBUG=false
# NEXTAUTH_URL=https://yourdomain.com

# ===== PERFORMANCE =====
# Bundle analyzer
ANALYZE=false

# Image optimization
NEXT_PUBLIC_OPTIMIZE_IMAGES=true

# ===== THIRD-PARTY INTEGRATIONS =====
# Stripe (if using payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Email Service
EMAIL_SERVICE_API_KEY=your-email-service-api-key

# ===== CUSTOM VARIABLES =====
# Add your custom environment variables here
# NEXT_PUBLIC_CUSTOM_VAR=value
# PRIVATE_CUSTOM_VAR=value